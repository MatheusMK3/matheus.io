{
  "version": 2,
  "name": "matheus.io",
  "alias": ["matheus.io"],
  "builds": [
    { "src": "api/**.js", "use": "@now/node" },
    { "src": "public/favicon.png", "use": "@now/static" },
    { "src": "public/thumbnail.jpg", "use": "@now/static" },
    { "src": "package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/favicon.png", "dest": "/public/favicon.png" },
    { "src": "/thumbnail.jpg", "dest": "/public/thumbnail.jpg" },
    { "src": "^/api/(.*)", "dest": "/api/$1"},
    { "src": "^/css/(.*)", "dest": "/css/$1" },
    { "src": "^/img/(.*)", "dest": "/img/$1" },
    { "src": "^/js/(.*)", "dest": "/js/$1" },
    { "src": ".*", "dest": "index.html" }
  ],
  "env": {
    "sendgrid_key": "@sendgrid-key",
    "email_from": "@contact-from",
    "email_to": "@contact-to"
  }
}
